<div class="header">
    <div class="">
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header }}
        </div>

    </nav>
</div>

{{!-- Перший блок Hero (Заголовок, текст, картинка) --}}
{{#with main}}
<div class="main">
    <img src="{{image}}" alt="image" class="main_image">
    <div class="main_content">
        <h1 class="main_title">
            {{heading}}
        </h1>
        <p class="main_text">{{descriotion}}</p>
        <div class="main_action">
            <a class="button main_button" href="{{href}}">{{button}}</a>
        </div>

    </div>
</div>
{{/with}}

{{!-- Другий блок Blog з трьома картами --}}

<main class="featured">
    {{#each featured}}
    {{!-- Картка у компоненті --}}
    {{> cardFeatured data=this}}
    {{/each}}
</main>



<div class="actions">
    {{#each actions}}
    {{> actions}}
    {{/each}}
</div>




<footer class="page_block">
    <div class="footer">
        <div>
            {{> logo}}
            <span class="footer_copyright">Copyright 2023-2024</span>
        </div>

        {{#each footer}}
        <div class="col-3">
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
        {{/each}}

    </div>
</footer>